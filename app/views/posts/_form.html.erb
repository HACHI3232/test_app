<%= form_with(model: @post, url: posts_path, local: true) do |f| %>
<div class="field" style="text-align: center;">
  <%= f.label :category_id, "辞書の名前" %><br>
  <%= f.collection_select :category_id, @categories || [], :id, :name, { prompt: '辞書を選択してください' }, { class: 'form-control' } %>
  
</div>
<div class="field" style="text-align: center;">
  <%= f.label :word, "単語・用語" %><br>
  <%= f.text_area :word, class: "form__text", id: "dictionary_word" %>
</div>
<div class="field" style="text-align: center;">
  <%= f.label :mean, "意味" %><br>
  <%= f.text_area :mean, class: "form__text", id: "dictionary_mean" %>
</div>
  <div class="content_save_btn">
    <button class="button-6" role="button"><span>保存する</span></button>
  </div>
<% end %>
